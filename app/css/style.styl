.consalt-block-column 
	flex(between)
	width 100%
.consalt-block-column-el 
	height 440px
	width 300px
	border 8px solid #eaebec
	border-radius 7px 7px 0px 0px
	border-bottom 0px
	padding-top 20px
	flex(mid)
	flex-flow column
	justify-content:  flex-start
	&:hover
		background #183970
.consalt-block-column-el-title
	font-size 24px
