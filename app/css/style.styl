	line-height 24px
	text-transform uppercase 
	color white
	margin-bottom 75px
.consalt-block-column-el-text 
	color white
	text-decoration underline
	margin-bottom 50px
	position relative
	&:after
		content ''
		width 10px
		height 10px
		border-radius 50%
		left 50%
		margin-left -5px
		position absolute
		background white
		bottom -30px
	&:last-child
		&:after
			content ''
			width 0
			height 0
			
