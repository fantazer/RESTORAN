@import "variable/*"
@import "icon/*"
@import 'axis'
@import 'jeet'
@import 'rupture'

border-box-html()
fluid-media() //care flex box image
rupture.scale = 0 400px 600px 780px 960px 1300px
rupture.scale-names = 'xs' 'sm' 'm' 'l' 'xl' 'hd'
jeet.gutter = 1

wraper
	center(1200px)
	padding 20px

body
	font-family 'Open Sans'
	background #ccc
	padding 40px
	transtion all .4s

.main-news-items-title
	font-size 26px
	
.main-news-items
	col(1/4,cycle:4)
	font-size 12px
	margin-top 20px
	padding-right 20px
.main-news
	flex(mid)
	flex-wrap wrap

header
	width 100%
	background white
	height 200px